{% assign blog_block = section.id | replace: '_', '' | downcase %}

{% style %}
  .editorial__layout-{{ blog_block }} {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
  }

  .editorial-container-{{ blog_block }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.content_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .editorial-hero-{{ blog_block }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
    aspect-ratio: 16/9;
    background-color: #f4f4f4;
  }

  .editorial-hero-image-{{ blog_block }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .editorial-hero-placeholder-{{ blog_block }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .editorial-hero-placeholder-{{ blog_block }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .editorial-hero-overlay-{{ blog_block }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    padding: 40px 30px 30px;
    color: white;
  }

  .editorial-hero-category-{{ blog_block }} {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ section.settings.accent_color }};
    margin-bottom: 8px;
    display: block;
  }

  .editorial-hero-title-{{ blog_block }} {
    font-size: {{ section.settings.hero_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px;
    color: white;
  }

  .editorial-hero-excerpt-{{ blog_block }} {
    font-size: 16px;
    line-height: 1.5;
    opacity: 0.9;
    margin: 0;
  }

  .editorial-content-grid-{{ blog_block }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ section.settings.content_spacing }}px;
    margin-top: {{ section.settings.content_spacing }}px;
  }

  .editorial-article-{{ blog_block }} {
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ section.settings.card_border_color }};
  }

  .editorial-article-{{ blog_block }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .editorial-article-image-{{ blog_block }} {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .editorial-article-image-{{ blog_block }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .editorial-article-{{ blog_block }}:hover .editorial-article-image-{{ blog_block }} img {
    transform: scale(1.05);
  }

  .editorial-article-placeholder-{{ blog_block }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .editorial-article-placeholder-{{ blog_block }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .editorial-article-content-{{ blog_block }} {
    padding: 24px;
  }

  .editorial-article-meta-{{ blog_block }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 12px;
    color: {{ section.settings.meta_text_color }};
  }

  .editorial-article-category-{{ blog_block }} {
    background-color: {{ section.settings.accent_color }};
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .editorial-article-date-{{ blog_block }} {
    font-weight: 500;
  }

  .editorial-article-title-{{ blog_block }} {
    font-size: {{ section.settings.article_title_size }}px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 12px;
    color: {{ section.settings.title_color }};
  }

  .editorial-article-title-{{ blog_block }} a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .editorial-article-title-{{ blog_block }} a:hover {
    color: {{ section.settings.accent_color }};
  }

  .editorial-article-excerpt-{{ blog_block }} {
    font-size: 14px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0 0 16px;
  }

  .editorial-read-more-{{ blog_block }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 600;
    color: {{ section.settings.accent_color }};
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .editorial-read-more-{{ blog_block }}:hover {
    gap: 10px;
  }

  .editorial-read-more-{{ blog_block }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .editorial-read-more-{{ blog_block }}:hover svg {
    transform: translateX(2px);
  }

  .editorial-empty-state-{{ blog_block }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .editorial-empty-state-{{ blog_block }} h3 {
    font-size: 24px;
    margin: 0 0 12px;
    color: {{ section.settings.title_color }};
  }

  .editorial-empty-state-{{ blog_block }} p {
    font-size: 16px;
    margin: 0;
    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    .editorial__layout-{{ blog_block }} {
      padding: {{ section.settings.section_padding | times: 0.7 }}px 16px;
    }

    .editorial-hero-overlay-{{ blog_block }} {
      padding: 24px 20px 20px;
    }

    .editorial-hero-title-{{ blog_block }} {
      font-size: {{ section.settings.hero_title_size | times: 0.8 }}px;
    }

    .editorial-content-grid-{{ blog_block }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.content_spacing | times: 0.8 }}px;
    }

    .editorial-article-content-{{ blog_block }} {
      padding: 20px;
    }

    .editorial-article-title-{{ blog_block }} {
      font-size: {{ section.settings.article_title_size | times: 0.9 }}px;
    }
  }

  @media screen and (min-width: 769px) {
    .editorial-container-{{ blog_block }} {
      grid-template-columns: 2fr 1fr;
      gap: {{ section.settings.content_spacing | times: 1.5 }}px;
    }

    .editorial-hero-{{ blog_block }} {
      grid-column: 1 / -1;
    }

    .editorial-content-grid-{{ blog_block }} {
      grid-column: 1;
      margin-top: 0;
    }

    .editorial-sidebar-{{ blog_block }} {
      grid-column: 2;
    }
  }

  .editorial-sidebar-{{ blog_block }} {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_spacing }}px;
  }

  .editorial-sidebar-article-{{ blog_block }} {
    display: flex;
    gap: 16px;
    padding: 16px;
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: 1px solid {{ section.settings.card_border_color }};
    transition: transform 0.3s ease;
  }

  .editorial-sidebar-article-{{ blog_block }}:hover {
    transform: translateY(-2px);
  }

  .editorial-sidebar-image-{{ blog_block }} {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;
  }

  .editorial-sidebar-image-{{ blog_block }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .editorial-sidebar-placeholder-{{ blog_block }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .editorial-sidebar-placeholder-{{ blog_block }} svg {
    width: 24px;
    height: 24px;
    opacity: 0.3;
  }

  .editorial-sidebar-content-{{ blog_block }} {
    flex: 1;
    min-width: 0;
  }

  .editorial-sidebar-title-{{ blog_block }} {
    font-size: 14px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 8px;
    color: {{ section.settings.title_color }};
  }

  .editorial-sidebar-title-{{ blog_block }} a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .editorial-sidebar-title-{{ blog_block }} a:hover {
    color: {{ section.settings.accent_color }};
  }

  .editorial-sidebar-meta-{{ blog_block }} {
    font-size: 12px;
    color: {{ section.settings.meta_text_color }};
  }
{% endstyle %}

<div class="editorial__layout-{{ blog_block }}" {{ section.shopify_attributes }}>
  <div class="editorial-container-{{ blog_block }}">
    {% if section.settings.featured_article != blank %}
      <article class="editorial-hero-{{ blog_block }}">
        {% if section.settings.featured_article.image %}
          <img
            src="{{ section.settings.featured_article.image | image_url: width: 1200 }}"
            alt="{{ section.settings.featured_article.image.alt | escape }}"
            class="editorial-hero-image-{{ blog_block }}"
            loading="lazy"
            width="{{ section.settings.featured_article.image.width }}"
            height="{{ section.settings.featured_article.image.height }}"
          >
        {% else %}
          <div class="editorial-hero-placeholder-{{ blog_block }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        
        <div class="editorial-hero-overlay-{{ blog_block }}">
          {% if section.settings.featured_category != blank %}
            <span class="editorial-hero-category-{{ blog_block }}">{{ section.settings.featured_category }}</span>
          {% endif %}
          
          <h2 class="editorial-hero-title-{{ blog_block }}">
            <a href="{{ section.settings.featured_article.url }}">{{ section.settings.featured_article.title }}</a>
          </h2>
          
          {% if section.settings.featured_article.excerpt != blank %}
            <p class="editorial-hero-excerpt-{{ blog_block }}">{{ section.settings.featured_article.excerpt | truncate: 150 }}</p>
          {% endif %}
        </div>
      </article>
    {% endif %}

    <div class="editorial-content-grid-{{ blog_block }}">
      {% if section.settings.blog != blank %}
        {% for article in section.settings.blog.articles limit: section.settings.articles_to_show %}
          {% unless article.id == section.settings.featured_article.id %}
            <article class="editorial-article-{{ blog_block }}">
              <div class="editorial-article-image-{{ blog_block }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                  >
                {% else %}
                  <div class="editorial-article-placeholder-{{ blog_block }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              
              <div class="editorial-article-content-{{ blog_block }}">
                <div class="editorial-article-meta-{{ blog_block }}">
                  {% if section.settings.show_category and article.tags.size > 0 %}
                    <span class="editorial-article-category-{{ blog_block }}">{{ article.tags.first }}</span>
                  {% endif %}
                  {% if section.settings.show_date %}
                    <time class="editorial-article-date-{{ blog_block }}" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </time>
                  {% endif %}
                </div>
                
                <h3 class="editorial-article-title-{{ blog_block }}">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>
                
                {% if section.settings.show_excerpt and article.excerpt != blank %}
                  <p class="editorial-article-excerpt-{{ blog_block }}">{{ article.excerpt | truncate: 120 }}</p>
                {% endif %}
                
                <a href="{{ article.url }}" class="editorial-read-more-{{ blog_block }}">
                  {{ section.settings.read_more_text }}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          {% endunless %}
        {% endfor %}
      {% else %}
        <div class="editorial-empty-state-{{ blog_block }}">
          <h3>Select a blog to display articles</h3>
          <p>Choose a blog from the settings to showcase your editorial content in this magazine-style layout.</p>
        </div>
      {% endif %}
    </div>

    {% if section.settings.blog != blank and section.settings.show_sidebar %}
      <aside class="editorial-sidebar-{{ blog_block }}">
        {% assign sidebar_articles = section.settings.blog.articles | where: 'id', '!=', section.settings.featured_article.id %}
        {% for article in sidebar_articles limit: 4 offset: section.settings.articles_to_show %}
          <article class="editorial-sidebar-article-{{ blog_block }}">
            <div class="editorial-sidebar-image-{{ blog_block }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 160 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  width="{{ article.image.width }}"
                  height="{{ article.image.height }}"
                >
              {% else %}
                <div class="editorial-sidebar-placeholder-{{ blog_block }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            <div class="editorial-sidebar-content-{{ blog_block }}">
              <h4 class="editorial-sidebar-title-{{ blog_block }}">
                <a href="{{ article.url }}">{{ article.title | truncate: 60 }}</a>
              </h4>
              {% if section.settings.show_date %}
                <div class="editorial-sidebar-meta-{{ blog_block }}">
                  {{ article.published_at | date: '%B %d, %Y' }}
                </div>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      </aside>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Blog Block",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "article",
      "id": "featured_article",
      "label": "Featured article"
    },
    {
      "type": "text",
      "id": "featured_category",
      "label": "Featured article category",
      "default": "Featured"
    },
    {
      "type": "range",
      "id": "articles_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Articles to show",
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show sidebar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show article excerpts",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show publish date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_category",
      "label": "Show category tags",
      "default": true
    },
    {
      "type": "text",
      "id": "read_more_text",
      "label": "Read more text",
      "default": "Read more"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 16,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Content spacing",
      "default": 32
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Card border radius",
      "default": 12
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "hero_title_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Hero title size",
      "default": 36
    },
    {
      "type": "range",
      "id": "article_title_size",
      "min": 16,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Article title size",
      "default": 20
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card border color",
      "default": "#e5e5e5"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "meta_text_color",
      "label": "Meta text color",
      "default": "#999999"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#334FB4"
    }
  ],
  "presets": [
    {
      "name": "Blog Block"
    }
  ]
}
{% endschema %}