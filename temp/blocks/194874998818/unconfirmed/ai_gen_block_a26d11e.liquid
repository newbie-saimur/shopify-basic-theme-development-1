{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
  }

  .ai-image-carousel-slides-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-image-carousel-slide-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-carousel-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-image-carousel-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-image-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-image-carousel-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_width }}px;
    width: 100%;
  }

  .ai-image-carousel-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-image-carousel-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-image-carousel-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-image-carousel-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-image-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_color }};
    color: {{ block.settings.nav_icon_color }};
    border: none;
    width: {{ block.settings.nav_size }}px;
    height: {{ block.settings.nav_size }}px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 4;
    transition: all 0.3s ease;
    opacity: {{ block.settings.nav_opacity | divided_by: 100.0 }};
  }

  .ai-image-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_hover_color }};
    opacity: 1;
  }

  .ai-image-carousel-nav-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-image-carousel-nav-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-image-carousel-nav-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.nav_size }}px * 0.5);
    height: calc({{ block.settings.nav_size }}px * 0.5);
  }

  .ai-image-carousel-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 4;
  }

  .ai-image-carousel-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: {{ block.settings.dot_opacity | divided_by: 100.0 }};
  }

  .ai-image-carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    opacity: 1;
  }

  .ai-image-carousel-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-image-carousel-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-image-carousel-content-{{ ai_gen_id }} {
