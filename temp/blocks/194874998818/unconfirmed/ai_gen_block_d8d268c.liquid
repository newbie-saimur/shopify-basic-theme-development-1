{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-carousel-container-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: center;
    text-align: center;
    color: {{ block.settings.text_color }};
    height: {{ block.settings.slide_height }}px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-carousel-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 600px;
    padding: 40px 20px;
  }

  .ai-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ai-carousel-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-carousel-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .ai-carousel-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-carousel-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.8);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    transition: background-color 0.3s ease;
  }

  .ai-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-carousel-nav-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-carousel-nav-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-carousel-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-carousel-dot-{{ ai_gen_id }}.active {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-carousel-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 4px;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-slide-{{ ai_gen_id }} {
      height: {{ block.settings.slide_height | times: 0.7 }}px;
    }

    .ai-carousel-content-{{ ai_gen_id }} {
